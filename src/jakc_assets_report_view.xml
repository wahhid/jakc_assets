<?xml version="1.0" encoding="windows-1252"?>
<openerp>
    <data>
        <record id="view_assets_detail_report_form" model="ir.ui.view">
            <field name="name">Assets Detail Report</field>
            <field name="model">assets.detail.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form col="4" string="Assets Detail Report" version="7.0">
                    <footer>
                        <button name="generate_report" string="Show" type="object" default_focus="1" class="oe_highlight"/>
